<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backkk"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/marquee"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/croissant_one"
        android:marqueeRepeatLimit="-1"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Welcome to weather app | Everybody talks about the weather, but nobody does anything about it."
        android:textColor="@color/white"
        android:textSize="25dp"

        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_below="@id/marquee"

        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:elevation="5dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="storm.json" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/current"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/myweather" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="center"
            android:text="See Your City's Weather here"
            android:textColor="@color/white"
            android:textSize="12dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:id="@+id/ll2"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/search"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/rainbowwww" />

            <EditText
                android:id="@+id/editText"
                android:fontFamily="@font/arbutus_slab"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:maxLines="1"
                android:hint="Enter city name to search"
                android:textColorHint="@color/white"
                android:gravity="center"
                android:textColor="@color/white"/>

        <Button
            android:id="@+id/sbtn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:text="Search"
            android:fontFamily="@font/lily_script_one"
            android:textSize="10dp"
/>



    </LinearLayout>



    <TextView
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="170dp"

        android:drawableTop="@drawable/ic_baseline_person_24"
        android:gravity="center"
        android:text="Profile"
        android:background="#20FFFFFF"
        android:textColor="#CBC3E3"
        android:fontFamily="@font/lily_script_one"
        android:textSize="15sp" />

