<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Profile">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/profileweather"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="#1E8FD5"
        android:text="User's personal Information:"
        android:fontFamily="@font/cherry_cream_soda"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:text="Name:"
            android:textStyle="bold"
            android:fontFamily="@font/cherry_swash"
            android:textColor="#CCCCFF"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#abf7b1"
            android:fontFamily="@font/vollkorn_semibold"
            android:gravity="center|left"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Cityname:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/cherry_swash"
            android:textColor="#CCCCFF"
            android:gravity="center|right"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/usercity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="City"
            android:textStyle="bold"
            android:textColor="#abf7b1"
            android:fontFamily="@font/vollkorn_semibold"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Email:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/cherry_swash"
            android:textColor="#CCCCFF"
            android:gravity="center|right"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/vollkorn_semibold"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textColor="#abf7b1"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
android:fontFamily="@font/luckiest_guy"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Logut"/>



</LinearLayout>